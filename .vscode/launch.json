{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppvsdbg",
            "request": "launch",
            "name": "Rust: Unit Tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib"
                ]
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "python": "${workspaceRoot}/venv/Scripts/python.exe",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Pytest",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "python": "${workspaceRoot}/venv/Scripts/python.exe",
            "module": "pytest",
            "cwd": "${workspaceRoot}"
        },
    ]
}